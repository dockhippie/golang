{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "github>dockhippie/.github//renovate/preset"
    ],
    "packageRules": [
        {
            "description": "Update tags without merge",
            "matchDatasources": [
                "github-tags"
            ],
            "matchUpdateTypes": [
                "major",
                "minor"
            ],
            "enabled": false,
            "automerge": false,
            "matchPackageNames": [
                "golang/go"
            ]
        },
        {
            "description": "Update tags without merge",
            "matchDatasources": [
                "github-tags"
            ],
            "matchUpdateTypes": [
                "patch"
            ],
            "enabled": true,
            "automerge": true,
            "matchPackageNames": [
                "golang/go"
            ]
        },
        {
            "description": "Strip go prefix from versions",
            "groupName": "version prefix",
            "matchDatasources": [
                "github-tags"
            ],
            "matchPackageNames": [
                "golang/go"
            ],
            "extractVersion": "^go(?<version>.*)$"
        }
    ]
}

{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "github>webhippie/renovate:docker",
        "docker:pinDigests",
        "default:automergeDigest"
    ],
    "ignorePaths": [
        "archive/"
    ],
    "packageRules": [
        {
            "datasources": [
                "docker"
            ],
            "updateTypes": [
                "major",
                "minor"
            ],
            "enabled": false
        },
        {
            "description": "Update only golang patch version",
            "datasources": [
                "github-tags"
            ],
            "updateTypes": [
                "major",
                "minor"
            ],
            "matchPackageNames": [
                "golang/go"
            ],
            "enabled": false
        },
        {
            "description": "Strip go prefix from versions",
            "groupName": "version prefix",
            "matchDatasources": [
                "github-tags"
            ],
            "matchPackageNames": [
                "golang/go"
            ],
            "extractVersion": "^go(?<version>.*)$"
        }
    ]
}
